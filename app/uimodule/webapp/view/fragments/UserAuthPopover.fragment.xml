<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="userAuthPopover"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer userAuthPopover"
		placement="Bottom"
		showHeader="false"
        >
		<VBox  class="userAuthPopoverVBox">
			<Button
				class="userAuthChildButton"
				text="Login"
				press=".onNavToLogin" />
			<Button
				class="userAuthChildButton"
				text="Register"
				press=".onNavToRegister" />
			<Button
				class="userAuthChildButton"
				text="Logout"
				press=".onLogout" />
		</VBox>
		
	</Popover>
</core:FragmentDefinition>