<mvc:View
    controllerName="uimodule.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    
    <VBox alignContent="Center" justifyContent="Center" alignItems="Center" width="100%" height="100%">
     
        <VBox justifyContent="Center" alignItems="Center">
          
            <Panel class="loginFormPanel" width="400px">
                <content>
                    <VBox class="sapUiSmallMargin" justifyContent="Center" alignItems="Stretch" >
                        <Title level="H2" text="LOGIN" class="loginFormTitle"/>
                        <Input placeholder="Email" class="loginInputMargin"  value="{loginModel>/email}" id="loginEmail" />
                        <Input placeholder="Password" type="Password" class="loginInputMargin" value="{loginModel>/password}"/>
                        <CheckBox text="I agree all statements in Terms of service" class="loginInputMargin"/>
                        <Button text="Sign In" type="Emphasized" width="100%" class="loginSignInButton" press="onLogin"/>
                        <Text text="Don't have an account? " class="loginFooterText"/>
                        <Link text="Sign up here" press="onNavToRegister" class="loginFooterLink"/>
                    </VBox>
                </content>
            </Panel>
        </VBox>
    </VBox>
</mvc:View>



