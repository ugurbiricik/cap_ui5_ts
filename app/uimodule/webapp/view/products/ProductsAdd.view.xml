<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:html="http://www.w3.org/1999/xhtml"
          displayBlock="true"
          controllerName="uimodule.controller.Products">
 
         <VBox class="mainContainer" justifyContent="Center" alignItems="Center">
        <!-- Form Paneli -->
        <Panel class="formPanel" headerText="Add New Product" width="400px">
            <content>
                <VBox class="sapUiSmallMargin" justifyContent="Center" alignItems="Stretch">

                    <!-- Ürün Adı -->
                    <Label text="Name"/>
                    <Input id="nameInput" value="{newProductModel>/newProduct/name}" class="inputMargin"/>

                    <!-- Fiyat -->
                    <Label text="Price"/>
                    <Input id="priceInput" value="{newProductModel>/newProduct/price}" type="Number" class="inputMargin"/>

                    <!-- Açıklama -->
                    <Label text="Description"/>
                    <Input id="descInput" value="{newProductModel>/newProduct/description}" class="inputMargin"/>

                    <!-- Görsel URL Girişi -->
                    <Label text="Product Image URL"/>
                    <Input id="imageURLInput" value="{newProductModel>/newProduct/image}" placeholder="Enter image URL..." class="inputMargin"/>

                    <!-- Ürün Ekle Butonu -->
                    <Button text="Add Product" type="Emphasized" press="onAddProduct" width="100%" class="addButton"/>
                </VBox>
            </content>
        </Panel>
    </VBox>
  
</mvc:View>
