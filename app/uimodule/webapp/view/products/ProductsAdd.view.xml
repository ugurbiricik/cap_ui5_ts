<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:html="http://www.w3.org/1999/xhtml"
          displayBlock="true"
          controllerName="uimodule.controller.Products">
 
         <VBox class="pAddContainer" justifyContent="Center" alignItems="Center">
       
        <Panel class="pAddFormPanel" headerText="Add New Product" width="400px">
            <content>
                <VBox class="sapUiSmallMargin" justifyContent="Center" alignItems="Stretch">

                   
                    <Label text="Name"/>
                    <Input id="nameInput" value="{newProductModel>/newProduct/name}" class="pAddInputMargin"/>

                 
                    <Label text="Price"/>
                    <Input id="priceInput" value="{newProductModel>/newProduct/price}" type="Number" class="pAddInputMargin"/>

                  
                    <Label text="Description"/>
                    <Input id="descInput" value="{newProductModel>/newProduct/description}" class="pAddInputMargin"/>

                  
                    <Label text="Product Image URL"/>
                    <Input id="imageURLInput" value="{newProductModel>/newProduct/image}" placeholder="Enter image URL..." class="pAddInputMargin"/>

                  
                    <Button text="Add Product" type="Emphasized" press="onAddProduct" width="100%" class="pAddButton"/>
                </VBox>
            </content>
        </Panel>
    </VBox>
  
</mvc:View>
